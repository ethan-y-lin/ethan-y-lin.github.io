---
const { title, img, desc, badge, links, authors, venue, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---


<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>

        {authors && <p class="text-sm py-1 text-gray-400 italic">{authors}</p>}
        {venue && <p class="text-sm py-1 text-gray-500">{venue}</p>}

        <p class="py-1 text-1xl">{desc}</p>

        <div class="flex flex-wrap gap-2 mt-2">
            {
            links.map(([name, href]) => (
                <a
                href={href}
                target="_blank"
                class="btn btn-sm btn-outline"
                >
                {name}
                </a>
            ))
            }
        </div>
      </div>
    </div>
  </a>
</div>